<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="일" android:gravity="center" android:textColor="#F44336"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="월" android:gravity="center"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="화" android:gravity="center"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="수" android:gravity="center"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="목" android:gravity="center"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="금" android:gravity="center"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="토" android:gravity="center" android:textColor="#2196F3"/>
    </LinearLayout>

    <GridView
        android:id="@+id/grid_calendar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:numColumns="7"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/list_workout_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:divider="@null"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="이 루틴으로 운동하러 가기"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="홈으로 가기"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</LinearLayout>
